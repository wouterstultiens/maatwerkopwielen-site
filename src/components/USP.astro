---
// src/components/USP.astro
const points = [
  { emoji: "✅", text: "100 % onafhankelijk – ik koop of verkoop niet zelf." },
  { emoji: "💬", text: "Persoonlijk contact – één aanspreekpunt." },
  { emoji: "🔍", text: "Grondige technische checks & transparant rapport." },
  {
    emoji: "💸",
    text: "Vaste, scherpe tarieven – geen verrassingen achteraf.",
  },
];
---

<section id="usp" class="py-20 bg-gray-100">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">
      Waarom kiezen klanten voor mij?
    </h2>
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {
        points.map((p) => (
          <div class="flex items-start gap-4">
            <span class="text-3xl">{p.emoji}</span>
            <p class="text-lg">{p.text}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
