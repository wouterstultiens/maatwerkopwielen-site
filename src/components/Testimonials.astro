---
// src/components/Testimonials.astro
const reviews = [
  { name: 'Mark (Arnhem)', quote: 'Binnen 2 weken mijn Golf verkocht voor € 1.200 meer dan vraagprijs.' },
  { name: 'Linda (Utrecht)', quote: 'Geen stress, geen tijd kwijt. Jasper regelde alles voor mijn nieuwe lease‑auto.' },
];
---
<section id="testimonials" class="py-16 bg-gray-50">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-10">Ervaringen van klanten</h2>
    <div class="grid md:grid-cols-2 gap-8">
      {reviews.map(r => (
        <blockquote class="bg-white p-6 rounded-lg shadow">
          <p class="text-gray-700 italic">“{r.quote}”</p>
          <footer class="mt-4 text-primary font-semibold">— {r.name}</footer>
        </blockquote>
      ))}
    </div>
  </div>
</section>
