---
// src/components/Testimonials.astro
import reviews from "../../data/testimonials.json";
---

<section id="testimonials" class="py-20 bg-gray-100">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Ervaringen van klanten</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {
        reviews.map((r) => (
          <blockquote class="bg-white p-6 rounded-lg shadow">
            <p class="italic text-gray-700">“{r.quote}”</p>
            <footer class="mt-4 text-primary font-semibold">— {r.name}</footer>
          </blockquote>
        ))
      }
    </div>
  </div>
</section>
