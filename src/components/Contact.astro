---
// src/components/Contact.astro
const phone = "06 2796 65314";
const email = "info@maatwerkopwielen.nl";
---

<section id="contact" class="py-20 bg-gray-100">
  <div class="container mx-auto px-6 text-center">
    <h2 class="text-3xl font-bold mb-4">Vragen of interesse?</h2>
    <p class="mb-6">Bel of mail voor een vrijblijvende afspraak.</p>
    <div class="flex flex-col md:flex-row justify-center gap-4">
      <a
        href={`tel:+31${phone.replace(/\D/g, "")}`}
        class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white text-base font-semibold rounded-full hover:bg-primary-light transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primary-dark"
        aria-label={`Bel ${phone}`}
      >
        {phone}
      </a>
      <a
        href={`mailto:${email}`}
        class="inline-flex items-center justify-center px-6 py-3 bg-white text-primary border border-gray-300 rounded-full hover:bg-accent transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primary-dark"
        aria-label={`Mail ${email}`}
      >
        {email}
      </a>
    </div>
  </div>
</section>
