---
import Layout from "../layouts/BaseLayout.astro";
import testimonials from "../../data/testimonials.json";
import { Icon } from "astro-icon/components";
---

<Layout
  title="Maatwerk op Wielen – Persoonlijke automakelaar"
  description="Uw persoonlijke automakelaar – van zoektocht tot aflevering."
>
  <!-- ░░ HERO ░░ -->
  <section
    id="hero"
    class="relative min-h-[85vh] flex items-center justify-center"
  >
    <img
      src="/auto3.png"
      alt="Moderne auto rijdt door zonnige straat"
      class="absolute inset-0 w-full h-full object-cover"
      width="1920"
      height="1080"
      loading="lazy"
    />

    <div
      class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/35 to-black/25 backdrop-brightness-75"
    >
    </div>

    <div class="relative z-10 text-center px-4">
      <h1
        class="text-snow-gray font-serif text-4xl md:text-6xl font-bold leading-tight mb-4"
      >
        Maatwerk op wielen,<br class="hidden sm:inline" /> zonder gedoe.
      </h1>
      <p class="text-snow-gray/90 text-lg md:text-2xl mb-8">
        Uw persoonlijke automakelaar – van zoektocht tot aflevering.
      </p>

      <a
        href="#contact"
        class="inline-flex items-center gap-2 bg-primary py-3 px-8 rounded-lg text-white text-lg font-medium shadow-lg transition hover:-translate-y-0.5 hover:shadow-xl focus:ring-4 focus:ring-primary/40"
      >
        <Icon name="ic:baseline-calendar-today" class="w-5 h-5" /> Plan gratis intake
      </a>
    </div>
  </section>

  <!-- ░░ USP GRID ░░ -->
  <section id="usp" class="py-20 md:py-28 bg-snow-gray">
    <div class="container">
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
        {
          [
            {
              icon: "ic:baseline-verified-user",
              title: "100% onafhankelijk",
              text: "Geen voorraad, geen verkooppraatjes – alleen uw belang.",
            },
            {
              icon: "ic:baseline-vpn-key",
              title: "Top-aanbod op maat",
              text: "Dealers, veilingen en particulieren in heel Nederland.",
            },
            {
              icon: "ic:baseline-handshake",
              title: "Onderhandelen & check",
              text: "U bespaart tijd en geld; elke auto wordt grondig gecontroleerd.",
            },
            {
              icon: "ic:baseline-person",
              title: "Eén aanspreekpunt",
              text: "Persoonlijk contact – reactie op WhatsApp binnen 24 uur.",
            },
          ].map((u) => (
            <div class="group p-6 bg-white rounded-2xl shadow-md flex flex-col transition hover:shadow-lg hover:-translate-y-1">
              <Icon
                name={u.icon}
                class="w-8 h-8 text-primary mb-4 transition group-hover:scale-110"
              />
              <h3 class="text-trust-blue font-semibold mb-2">{u.title}</h3>
              <p class="text-charcoal/90 text-sm leading-relaxed flex-1">
                {u.text}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- ░░ PROCES ░░ -->
  <section id="proces" class="py-20 md:py-28 bg-white">
    <div class="container">
      <h2
        class="text-center text-trust-blue font-serif text-3xl md:text-4xl font-bold mb-16"
      >
        Zo werkt het
      </h2>

      <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
        {
          [
            {
              icon: "ic:baseline-question-answer",
              step: "1. Intake",
              desc: "Uw wensen, budget en planning helder in kaart.",
            },
            {
              icon: "ic:baseline-search",
              step: "2. Zoeken",
              desc: "Selectie van geschikte auto’s uit vertrouwde bronnen.",
            },
            {
              icon: "ic:baseline-assignment-turned-in",
              step: "3. Controle & deal",
              desc: "Historie-check, proefrit en scherpe onderhandeling.",
            },
            {
              icon: "ic:baseline-directions-car",
              step: "4. Levering",
              desc: "Bij u thuis of op locatie – rijklaar en zonder zorgen.",
            },
          ].map((p) => (
            <div class="text-center flex flex-col items-center">
              <Icon name={p.icon} class="w-10 h-10 text-primary mb-4" />
              <h3 class="text-trust-blue font-semibold mb-1">{p.step}</h3>
              <p class="text-charcoal/90 text-sm">{p.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- ░░ OVER JASPER ░░ -->
  <section id="over" class="py-20 md:py-28 bg-snow-gray">
    <div class="container grid gap-12 md:grid-cols-2 items-center">
      <img
        src="/owner.jpg"
        alt="Portret van Jasper Zweers"
        class="w-full rounded-2xl shadow-lg aspect-[4/3] object-cover"
        loading="lazy"
      />

      <div class="prose max-w-prose md:max-w-none">
        <h2
          class="text-trust-blue font-serif text-3xl md:text-4xl font-bold mb-6"
        >
          Over Jasper
        </h2>
        <p>
          <strong>Jasper Zweers</strong> – automakelaar met passie voor auto’s én
          service. Hij helpt particulieren en ondernemers bij het vinden, aankopen
          en leveren van de juiste auto.
        </p>
        <p>
          U vertelt wat u zoekt, Jasper regelt de rest: zoeken, vergelijken,
          onderhandelen en leveren. Zo bespaart u tijd, geld én frustratie.
        </p>
        <p class="text-trust-blue italic font-medium">
          “Uw auto, uw wensen – mijn werk.”
        </p>
      </div>
    </div>
  </section>

  <!-- ░░ REVIEWS ░░ -->
  <section id="reviews" class="py-20 md:py-28 bg-white">
    <div class="container text-center">
      <h2
        class="text-trust-blue font-serif text-3xl md:text-4xl font-bold mb-16"
      >
        Ervaringen van klanten
      </h2>

      <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-4">
        {
          testimonials.map((t) => (
            <figure class="relative bg-white p-8 rounded-3xl shadow-md flex flex-col">
              <img
                src={t.img}
                alt={t.name}
                class="w-16 h-16 object-cover rounded-full border-4 border-surface shadow-lg -mt-12 self-center"
              />
              <blockquote class="mt-6 text-neutral/90 leading-relaxed mb-4 flex-1">
                “{t.quote}”
              </blockquote>
              <figcaption class="text-primary font-semibold text-sm text-center">
                — {t.name}
              </figcaption>
            </figure>
          ))
        }
      </div>
    </div>
  </section>

  <!-- ░░ TARIEF & FAQ ░░ -->
  <section id="tarief" class="py-20 md:py-28 bg-snow-gray">
    <div class="container">
      <h2
        class="text-center text-trust-blue font-serif text-3xl md:text-4xl font-bold mb-10"
      >
        Transparant tarief
      </h2>

      <div class="max-w-3xl mx-auto bg-white p-10 rounded-2xl shadow-md">
        <p class="text-center text-charcoal text-lg mb-8 leading-relaxed">
          Volledige begeleiding vanaf
          <span class="text-trust-blue font-bold">€ 595 incl. btw</span>. U
          betaalt pas wanneer we dé auto hebben gevonden.
        </p>

        {
          [
            {
              q: "Wat krijg ik voor dit bedrag?",
              a: "Persoonlijk advies, selectie uit betrouwbaar aanbod, historie- en technische check, onderhandeling en levering.",
            },
            {
              q: "Is het intakegesprek gratis?",
              a: "Ja, het intakegesprek is kosteloos en vrijblijvend.",
            },
            {
              q: "Hoe snel reageer je?",
              a: "Jasper reageert op WhatsApp doorgaans binnen 24 uur, ook in het weekend.",
            },
          ].map((item) => (
            <details class="border-t border-gray-200 py-4 last:pb-0">
              <summary class="cursor-pointer font-semibold text-trust-blue leading-relaxed">
                {item.q}
              </summary>
              <p class="mt-4 text-charcoal text-sm leading-relaxed">{item.a}</p>
            </details>
          ))
        }
      </div>
    </div>
  </section>

  <!-- ░░ CONTACT ░░ -->
  <section id="contact" class="py-20 md:py-28 bg-white">
    <div class="container text-center max-w-xl">
      <h2
        class="text-trust-blue font-serif text-3xl md:text-4xl font-bold mb-6"
      >
        Plan uw gratis intake
      </h2>
      <p class="text-charcoal mb-10 leading-relaxed">
        Bel, mail of stuur een WhatsApp-bericht en Jasper neemt binnen 24 uur
        contact met u op.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="https://wa.me/316279665314"
          class="min-w-[11rem] flex-1 inline-flex items-center justify-center gap-2
                 px-6 py-3 bg-primary text-white font-medium rounded-lg shadow-lg transition
                 hover:-translate-y-0.5 hover:shadow-xl focus:ring-4 focus:ring-primary/40"
        >
          <Icon name="ic:baseline-whatsapp" class="w-5 h-5" /> WhatsApp
        </a>

        <a
          href="tel:+316279665314"
          class="min-w-[11rem] flex-1 inline-flex items-center justify-center gap-2
                 px-6 py-3 bg-trust-blue text-white font-medium rounded-lg shadow-lg transition
                 hover:-translate-y-0.5 hover:shadow-xl focus:ring-4 focus:ring-trust-blue/40"
        >
          <Icon name="ic:baseline-call" class="w-5 h-5" /> Bel nu
        </a>

        <a
          href="mailto:jasper@maatwerk-op-wielen.nl"
          class="min-w-[11rem] flex-1 inline-flex items-center justify-center gap-2
                 px-6 py-3 bg-honey-gold text-white font-medium rounded-lg shadow-lg transition
                 hover:-translate-y-0.5 hover:shadow-xl focus:ring-4 focus:ring-honey-gold/40"
        >
          <Icon name="ic:baseline-email" class="w-5 h-5" /> E-mail
        </a>
      </div>
    </div>
  </section>
</Layout>
