---
// src/layouts/BaseLayout.astro
import "../styles/tailwind.css";
const {
  title = "Maatwerk op Wielen – Uw auto-makelaar",
  description = "Eerlijk advies & begeleiding bij het kopen of verkopen van uw auto.",
} = Astro.props;
---

<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/owner.png" />

    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="font-sans antialiased text-gray-900 bg-gray-50">
    <slot />
    <div class="fixed bottom-0 inset-x-0 bg-white border-t border-gray-200 py-3 flex justify-center items-center gap-6 z-50">
      <a href="https://wa.me/316279665314" aria-label="WhatsApp" class="text-gray-600 hover:text-primary text-2xl">
        <span aria-hidden="true">💬</span>
      </a>
      <a href="tel:+316279665314" aria-label="Bel via telefoon" class="text-gray-600 hover:text-primary text-2xl">
        <span aria-hidden="true">📞</span>
      </a>
      <a href="mailto:info@maatwerkopwielen.nl" aria-label="Mail" class="text-gray-600 hover:text-primary text-2xl">
        <span aria-hidden="true">✉️</span>
      </a>
    </div>
  
  </body>
</html>
